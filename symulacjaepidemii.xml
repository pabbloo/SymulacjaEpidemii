  <property name="project.jdk.home" value="${jdk.home.12}"/>
  <property name="project.jdk.bin" value="${jdk.bin.12}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.12"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module SymulacjaEpidemii -->
  
  <dirname property="module.symulacjaepidemii.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.symulacjaepidemii" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.symulacjaepidemii" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.symulacjaepidemii" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.symulacjaepidemii" value="-encoding UTF-8 -source 12 -target 12 ${compiler.args}"/>
  
  <property name="symulacjaepidemii.output.dir" value="${module.symulacjaepidemii.basedir}/out/production/SymulacjaEpidemii"/>
  <property name="symulacjaepidemii.testoutput.dir" value="${module.symulacjaepidemii.basedir}/out/test/SymulacjaEpidemii"/>
  
  <path id="symulacjaepidemii.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="symulacjaepidemii.module.production.classpath">
    <path refid="${module.jdk.classpath.symulacjaepidemii}"/>
  </path>
  
  <path id="symulacjaepidemii.runtime.production.module.classpath">
    <pathelement location="${symulacjaepidemii.output.dir}"/>
  </path>
  
  <path id="symulacjaepidemii.module.classpath">
    <path refid="${module.jdk.classpath.symulacjaepidemii}"/>
    <pathelement location="${symulacjaepidemii.output.dir}"/>
  </path>
  
  <path id="symulacjaepidemii.runtime.module.classpath">
    <pathelement location="${symulacjaepidemii.testoutput.dir}"/>
    <pathelement location="${symulacjaepidemii.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.symulacjaepidemii">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.symulacjaepidemii">
    <patternset refid="excluded.from.module.symulacjaepidemii"/>
  </patternset>
  
  <path id="symulacjaepidemii.module.sourcepath">
    <dirset dir="${module.symulacjaepidemii.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.symulacjaepidemii" depends="compile.module.symulacjaepidemii.production,compile.module.symulacjaepidemii.tests" description="Compile module SymulacjaEpidemii"/>
  
  <target name="compile.module.symulacjaepidemii.production" depends="register.custom.compilers" description="Compile module SymulacjaEpidemii; production classes">
    <mkdir dir="${symulacjaepidemii.output.dir}"/>
    <javac2 destdir="${symulacjaepidemii.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.symulacjaepidemii}/javac">
      <compilerarg line="${compiler.args.symulacjaepidemii}"/>
      <bootclasspath refid="symulacjaepidemii.module.bootclasspath"/>
      <classpath refid="symulacjaepidemii.module.production.classpath"/>
      <src refid="symulacjaepidemii.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.symulacjaepidemii"/>
    </javac2>
    
    <copy todir="${symulacjaepidemii.output.dir}">
      <fileset dir="${module.symulacjaepidemii.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.symulacjaepidemii.tests" depends="register.custom.compilers,compile.module.symulacjaepidemii.production" description="compile module SymulacjaEpidemii; test classes" unless="skip.tests"/>
  
  <target name="clean.module.symulacjaepidemii" description="cleanup module">
    <delete dir="${symulacjaepidemii.output.dir}"/>
    <delete dir="${symulacjaepidemii.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.symulacjaepidemii" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.symulacjaepidemii" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.symulacjaepidemii:jar" value="${basedir}/out/artifacts/SymulacjaEpidemii_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.SymulacjaEpidemii.jar" value="${artifacts.temp.dir}/SymulacjaEpidemii.jar"/>
  </target>
  
  <target name="artifact.symulacjaepidemii:jar" depends="init.artifacts, compile.module.symulacjaepidemii" description="Build &#39;SymulacjaEpidemii:jar&#39; artifact">
    <property name="artifact.temp.output.symulacjaepidemii:jar" value="${artifacts.temp.dir}/SymulacjaEpidemii_jar"/>
    <mkdir dir="${artifact.temp.output.symulacjaepidemii:jar}"/>
    <jar destfile="${temp.jar.path.SymulacjaEpidemii.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${symulacjaepidemii.output.dir}"/>
      <manifest>
        <attribute name="Main-Class" value="epidemia.Simulation" />
      </manifest>
    </jar>
    <copy file="${temp.jar.path.SymulacjaEpidemii.jar}" tofile="${artifact.temp.output.symulacjaepidemii:jar}/SymulacjaEpidemii.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.symulacjaepidemii:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.symulacjaepidemii:jar}"/>
    <copy todir="${artifact.output.symulacjaepidemii:jar}">
      <fileset dir="${artifact.temp.output.symulacjaepidemii:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>